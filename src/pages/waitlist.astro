---
import Layout from '../layouts/Layout.astro'
import JoinForm from '../components/JoinForm.astro'
---

<Layout title="NeighborhoodFinder">
  <div class="min-h-screen w-full flex flex-col">
    <div
      class="bg-white flex-grow rounded-t-[3rem] border m-6 sm:m-16 md:m-20 mb-0 sm:mb-0 md:mb-0"
    >
      <div class="px-6 pt-24 sm:pt-32 pb-10 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
          <p class="text-base font-semibold leading-7 text-indigo-600">Be the First to know</p>
          <h2 class="mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
            We're Launching Soon
          </h2>
          <p class="mt-6 text-lg leading-8 text-gray-600">
            Our platform is still in development, but we're excited to bring it to life soon. Sign
            up now to stay informed about our launch, and be among the first to explore
            neighborhoods with ease.
          </p>
        </div>
      </div>
      <JoinForm />
    </div>
  </div>
</Layout>
