      <form class="mx-auto mt-10 flex max-w-xl gap-x-4">
        <label for="email-address" class="sr-only">Email address</label>
        <input
          id="email-address"
          name="email"
          type="email"
          autocomplete="email"
          required
          class="min-w-0 flex-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6"
          placeholder="Enter your email"
        />
        <input
          id="postal-code"
          name="postalcode"
          type="number"
          autocomplete="postal-code"
          required
          class="min-w-0 w-20 flex-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6"
          placeholder="Postal code"
        />
        <button
          type="submit"
          class="flex-none rounded-md bg-blue-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600"
          >Notify me</button
        >
      </form>
    </div>
  </div>
</div>

<script is:inline>
  document.querySelector('form')?.addEventListener('submit', (e) => {
    e.preventDefault()

    const email = e.target.elements.email.value
    const postalcode = e.target.elements.postalcode.value
    const path = e.target.dataset.path || 'unknown'

    const entry = {
      email,
