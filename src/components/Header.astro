---
interface Props {
  title: string
  subtitle: string
  tagline: string
}

const { title, subtitle, tagline } = Astro.props
---

<div class="bg-white px-6 py-24 sm:py-32 lg:px-56">
  <div class="max-w-2xl text-left">
    <h2
      class="mt-2 text-5xl sm:text-6xl font-bold tracking-tight text-gray-900 md:text-7xl text-left"
    >
      <span
        class="text-transparent bg-clip-text bg-gradient-to-r via-60% from-blue-400 via-blue-600 to-indigo-700"
        >Neighborhood</span
      ><br /><span>Finder</span>
    </h2>
    <p class="my-8 text-lg leading-8 text-gray-600">{subtitle}</p>
    <a
      href="#join"
      class="join flex-none text-lg rounded-full border-2 border-blue-600 bg-white px-7 py-3 font-semibold text-blue-600 shadow-sm hover:bg-blue-600 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-colors"
      >Join waitlist</a
    >

    <div
      id="scroll-down"
      class="fixed left-0 bottom-20 flex justify-center items-center gap-2 text-center w-full opacity-100 transition-opacity duration-500 animate-bounce text-lg"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="w-7 h-7 text-blue-600"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path d="M7 7l5 5l5 -5"
        ></path><path d="M7 13l5 5l5 -5"></path></svg
      > scroll to learn more
    </div>
  </div>
</div>

<script is:inline>
  // When screen is scrolled more than 50, hide the button using event listener
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      document.querySelector('#scroll-down').classList.replace('opacity-100', 'opacity-0')
    } else {
      document.querySelector('#scroll-down').classList.replace('opacity-0', 'opacity-100')
    }
  })
</script>
